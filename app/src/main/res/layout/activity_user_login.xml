<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLogin"
    android:background="#034472"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.waynell.library.DropAnimationView
            android:id="@+id/drop_animation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            app:largePercent="80%"
            app:maxSize="50dp"
            app:minSize="30dp"
            app:rate="100"
            app:rotationAnimate="true"
            app:xAnimate="true"
            app:yAnimate="true" />




    </RelativeLayout>




    <LinearLayout
        android:elevation="10dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="#eefffdd0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#034472"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText

                android:id="@+id/lemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#034472"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText
                android:id="@+id/lpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <com.rilixtech.materialfancybutton.MaterialFancyButton
android:onClick="loginfun"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            fancy:mfb_focusColor="#ccffffff"
            fancy:mfb_iconPosition="right"
            fancy:mfb_fontIconSize="50dp"
            fancy:mfb_text="LOGIN"
            android:textSize="20sp"
            fancy:mfb_radius="10dp"
            fancy:mfb_textColor="#ffffff"
            fancy:mfb_borderColor="#034472"
            fancy:mfb_borderWidth="1dp"

            fancy:mfb_defaultColor="#034472"
            android:id="@+id/materialFancyButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/waveLoadingView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></com.rilixtech.materialfancybutton.MaterialFancyButton>


        <TextView
            android:textAlignment="center"
            android:text="Create Account"
            android:textSize="20dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:id="@+id/rtv"
            android:onClick="createaccountfun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <!--com.hanks.htextview.rainbow.RainbowTextView

            android:id="@+id/rtv"
            android:onClick="createaccountfun"
        android:background="#00000000"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create Account"
            android:textSize="20sp"
            app:colorSpace="150dp"
            app:colorSpeed="4dp"/-->


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
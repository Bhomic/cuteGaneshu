<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendExcel"
    android:background="#034472"
    android:padding="20dp"
    >



    <ScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#00000099"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:borderColor="#fffdd0"
                app:borderWidth="2dp"
                app:cornerRadius="8dp"
                android:padding="16dp">

                <EditText
                    android:id="@+id/recieveret"
                    android:textColor="#fffdd0"
                    android:textColorHint="#fffdd0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reciever's Email Address"  />




            </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>



            <com.sanojpunchihewa.glowbutton.GlowButton

                android:onClick="addreciever"
                android:id="@+id/addreciever"
                android:layout_marginTop ="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="30dp"
                android:text="Add Reciever"
                android:textColor="#034472"
                app:buttonColor="#fffdd0"
                app:cornerRadius="50dp"
                app:glowColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pressedGlowSize="25dp"
                app:unpressedGlowSize="20dp" />


            <com.sanojpunchihewa.glowbutton.GlowButton
                android:onClick="sendsheet"
                android:id="@+id/sendemail"
                android:layout_marginTop ="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="30dp"
                android:text="Send Email"
                android:textColor="#034472"
                app:buttonColor="#fffdd0"
                app:cornerRadius="50dp"
                app:glowColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pressedGlowSize="25dp"
                app:unpressedGlowSize="20dp" />


            <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout

                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:borderColor="#fffdd0"
                app:borderWidth="2dp"
                app:cornerRadius="8dp"
                android:padding="16dp">

                <EditText
                    android:id="@+id/phoneno"
                    android:textColor="#fffdd0"
                    android:textColorHint="#fffdd0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reciever's Phone No"  />




            </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>




            <com.sanojpunchihewa.glowbutton.GlowButton
                android:onClick="whatsappmultiple"
                android:id="@+id/whatsappone"
                android:layout_marginTop ="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="30dp"
                android:text="Send through Whatsapp"
                android:textColor="#034472"
                app:buttonColor="#fffdd0"
                app:cornerRadius="50dp"
                app:glowColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pressedGlowSize="25dp"
                app:unpressedGlowSize="20dp" />


            <com.sanojpunchihewa.glowbutton.GlowButton
                android:onClick="whatsappwithoutrecievers"
                android:id="@+id/whatsappmulti"
                android:layout_marginTop ="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="30dp"
                android:text="Whatsapp Multiple"
                android:textColor="#034472"
                app:buttonColor="#fffdd0"
                app:cornerRadius="50dp"
                app:glowColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pressedGlowSize="25dp"
                app:unpressedGlowSize="20dp" />


            <LinearLayout
                android:id="@+id/recievers"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="30dp"
                android:id="@+id/files"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                ></LinearLayout>

            <LinearLayout
                android:id="@+id/selectedfiles"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                ></LinearLayout>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
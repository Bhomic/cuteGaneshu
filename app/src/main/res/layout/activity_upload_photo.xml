<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPhoto"
    android:background="#034472"
    android:padding="10dp"
    >


    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:onClick="getphoto"
                android:id="@+id/memory"
                android:layout_width = "match_parent"
                android:layout_height="350dp"
                android:src="@drawable/brazil"
                >


            </ImageView>
            <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:borderColor="#fffdd0"
                app:borderWidth="2dp"
                app:cornerRadius="8dp"
                android:padding="16dp">

                <EditText
                    android:id="@+id/photoname"
                    android:textColor="#fffdd0"

                    android:textColorHint="#fffdd0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Photo Name"  />

            </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


<LinearLayout
    android:layout_marginTop="10dp"
android:id="@+id/radioll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



</LinearLayout>



            <com.sanojpunchihewa.glowbutton.GlowButton

                android:onClick="uploadphoto"
                android:id="@+id/readexcel"
                android:layout_marginTop ="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="30dp"
                android:text="Upload Photo"
                android:textColor="#034472"
                app:buttonColor="#fffdd0"
                app:cornerRadius="50dp"
                app:glowColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pressedGlowSize="25dp"
                app:unpressedGlowSize="20dp" />





            <ProgressBar

                android:visibility="invisible"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:indeterminate="true" />


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendNotifs"
android:background="#034472"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

android:padding="20dp"
    >

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">
            <EditText

                android:id="@+id/notiftitle"
                android:textColor="#fffdd0"

                android:textColorHint="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Notification Title  "/>

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>





        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText

                android:id="@+id/notifbody"
                android:textColor="#fffdd0"

                android:textColorHint="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notification Body "  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:onClick="SendNotiffun"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            fancy:mfb_focusColor="#034472"
            fancy:mfb_iconPosition="right"
            fancy:mfb_fontIconSize="50dp"
            fancy:mfb_text="Send Notifications "
            android:textSize="20sp"
            fancy:mfb_radius="10dp"
            fancy:mfb_textColor="#034472"
            fancy:mfb_borderColor="#034472"
            fancy:mfb_borderWidth="1dp"

            fancy:mfb_defaultColor="#fffdd0"
            android:id="@+id/materialFancyButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/waveLoadingView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#034472"
    >



</LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/profile_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/userclp"
        app:civ_border_width="4dp"
        app:civ_border_color="#fffdd0"/>

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hanks.htextview.scale.ScaleTextView
            android:textAlignment="center"
            android:onClick="changename"
           android:paddingStart="20dp"
           android:textColor="#fffdd0"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30sp"/>
        <com.hanks.htextview.scale.ScaleTextView
            android:textAlignment="center"

            android:onClick="changecourse"
            android:paddingStart="20dp"

            android:textColor="#fffdd0"

            android:layout_marginTop="10dp"
            android:background="#00000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course"
            android:textSize="30sp"/>
        <com.hanks.htextview.scale.ScaleTextView
            android:textAlignment="center"

            android:onClick="changerollno"
            android:paddingStart="20dp"

            android:layout_marginTop="10dp"
            android:textColor="#fffdd0"

            android:background="#00000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roll No"
            android:textSize="30sp"/>

    </LinearLayout>

    <com.nightonke.boommenu.BoomMenuButton
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/bmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:bmb_buttonEnum="ham"
        app:bmb_piecePlaceEnum="piecePlace_ham_6"
        app:bmb_buttonPlaceEnum="buttonPlace_ham_6"
        />


    <com.sanojpunchihewa.glowbutton.GlowButton


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="logoutfun"
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="23dp"
        android:text="Logout"
        android:textSize="10dp"
        android:textColor="#000000"
        app:buttonColor="#ffffff"
        app:cornerRadius="50dp"
        app:glowColor="#ffffff"
        app:layout_constraintHorizontal_bias="0.503"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
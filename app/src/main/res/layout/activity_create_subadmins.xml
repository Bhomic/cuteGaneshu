<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateSubadmins"
    android:background="#fffdd0"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    >

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<ScrollView
    app:layout_constraintBottom_toBottomOf="parent"
  android:background="#034472"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >

    <LinearLayout
        android:paddingTop="20dp"
      android:paddingBottom="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.skydoves.powerspinner.PowerSpinnerView

            android:id="@+id/courses"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffdd0"
            android:gravity="left"
            android:hint="Subadmin Course"
            android:padding="10dp"
            android:textColor="#034472"
            android:textColorHint="#034472"
            android:textSize="14.5sp"

            app:spinner_arrow_gravity="end"
            app:spinner_arrow_padding="8dp"
            app:spinner_divider_color="#034472"
            app:spinner_divider_show="true"
            app:spinner_divider_size="0.4dp"
            app:spinner_item_array="@array/course"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="#fffdd0"
            app:spinner_popup_elevation="14dp" />



        <com.skydoves.powerspinner.PowerSpinnerView

            android:id="@+id/powers"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffdd0"
            android:gravity="left"
            android:hint="Subadmin Power"
            android:padding="10dp"
            android:textColor="#034472"
            android:textColorHint="#034472"
            android:textSize="14.5sp"

            app:spinner_arrow_gravity="end"
            app:spinner_arrow_padding="8dp"
            app:spinner_divider_color="#034472"
            app:spinner_divider_show="true"
            app:spinner_divider_size="0.4dp"
            app:spinner_item_array="@array/powers"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="#fffdd0"
            app:spinner_popup_elevation="14dp" />

        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText
                android:id="@+id/name"
                android:textColor="#fffdd0"

                android:textColorHint="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subadmin Name"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText
                android:id="@+id/email"
                android:textColor="#fffdd0"
                android:textColorHint="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subadmin Email"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>



        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText
                android:id="@+id/pass"
                android:textColor="#fffdd0"

                android:textColorHint="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subadmin password"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <com.rilixtech.materialfancybutton.MaterialFancyButton

            android:onClick="createsubadminfun"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            fancy:mfb_focusColor="#ccffffff"
            fancy:mfb_iconPosition="right"
            fancy:mfb_fontIconSize="50dp"
            fancy:mfb_text="SUBMIT"
            android:textSize="20sp"
            fancy:mfb_radius="10dp"
            fancy:mfb_textColor="#034472"
            fancy:mfb_borderColor="#034472"
            fancy:mfb_borderWidth="1dp"

            fancy:mfb_defaultColor="#fffdd0"
            android:id="@+id/materialFancyButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/waveLoadingView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
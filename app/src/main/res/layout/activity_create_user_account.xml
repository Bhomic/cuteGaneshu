<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUserAccount"
    android:background="#034472"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    >


     <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/brazil" />

<ScrollView

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:background="#dd034472"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText
                android:id="@+id/vfullname"
                android:textColorHint="#fffdd0"
                android:textColor="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText

                android:id="@+id/vemail"

                android:textColorHint="#fffdd0"
                android:textColor="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>



        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText
android:id="@+id/vpassword"
                android:textColorHint="#fffdd0"
                android:textColor="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"  />


        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText
android:id="@+id/rollno"
                android:textColorHint="#fffdd0"
                android:textColor="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Roll No"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#fffdd0"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:padding="16dp">

            <EditText
                android:id="@+id/phoneno"
                android:textColorHint="#fffdd0"
                android:textColor="#fffdd0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No"  />

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


        <com.skydoves.powerspinner.PowerSpinnerView

            android:id="@+id/gender"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffdd0"
            android:gravity="left"
            android:hint="Gender"
            android:padding="10dp"
            android:textColor="#034472"
            android:textColorHint="#034472"
            android:textSize="14.5sp"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_padding="8dp"
            app:spinner_divider_color="#034472"
            app:spinner_divider_show="true"
            app:spinner_divider_size="0.4dp"
            app:spinner_item_array="@array/gender"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="#fffdd0"
            app:spinner_popup_elevation="14dp" />


        <com.skydoves.powerspinner.PowerSpinnerView
           android:id="@+id/course"

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffdd0"
            android:gravity="left"
            android:hint="Course"
            android:padding="10dp"
            android:textColor="#034472"
            android:textColorHint="#034472"
            android:textSize="14.5sp"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_padding="8dp"
            app:spinner_divider_color="#034472"
            app:spinner_divider_show="true"
            app:spinner_divider_size="0.4dp"
            app:spinner_item_array="@array/course"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="#fffdd0"
            app:spinner_popup_elevation="14dp" />


        <com.rilixtech.materialfancybutton.MaterialFancyButton

            android:onClick="Createaccountbtn"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            fancy:mfb_focusColor="#ffffff"
            fancy:mfb_iconPosition="right"
            fancy:mfb_fontIconSize="50dp"
            fancy:mfb_text="Create Account"
            android:textSize="20sp"
            fancy:mfb_radius="10dp"
            fancy:mfb_textColor="#034472"
            fancy:mfb_borderColor="#034472"
            fancy:mfb_borderWidth="1dp"

            fancy:mfb_defaultColor="#fffdd0"
            android:id="@+id/materialFancyButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/waveLoadingView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></com.rilixtech.materialfancybutton.MaterialFancyButton>



        <TextView
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="5dp"
            android:onClick="alreadyhaveaccountfun"
            android:textColor="#ffffff"
            android:id="@+id/rbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <!--com.hanks.htextview.rainbow.RainbowTextView


            android:id="@+id/rbt"
            android:onClick="alreadyhaveaccountfun"
            android:background="#00000000"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Already Have Account ? "
            android:textSize="20sp"
            app:colorSpace="150dp"
            app:colorSpeed="4dp"/-->



    </LinearLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawNote"
    android:background="#034472">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rm.freedrawview.FreeDrawView
                android:id="@+id/your_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"

                app:paintAlpha="255"
                app:paintColor="#000000"
                app:paintWidth="4dp"
                app:resizeBehaviour="crop"/>

        </LinearLayout>



    <com.nightonke.boommenu.BoomMenuButton

        android:elevation="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:bmb_normalColor="#fffdd0"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/bmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bmb_buttonEnum="textInsideCircle"
        app:bmb_piecePlaceEnum="piecePlace_dot_8_1"
        app:bmb_buttonPlaceEnum="buttonPlace_sc_8_1"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
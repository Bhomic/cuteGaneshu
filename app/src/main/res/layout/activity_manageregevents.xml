<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manageregevents"

    android:background="#034472">


    <ScrollView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >


            <androidx.cardview.widget.CardView

                android:layout_marginTop="20dp"
                app:cardElevation="15dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#fffdd0"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:onClick="createv"
                        android:id="@+id/datetxt"
                        android:textColor="#034472"
                        android:background="@drawable/dynsubmit"
                        android:layout_margin="5dp"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="Date of Event! "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/svll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </LinearLayout>

            <androidx.cardview.widget.CardView

                android:layout_marginTop="20dp"
                app:cardElevation="15dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#03bbff"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/subll"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:onClick="createv"
                        android:id="@+id/createnewevent"
                        android:textColor="#03bbff"
                        android:background="@drawable/dynsubmit"
                        android:layout_margin="5dp"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="Create New event ! "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>